    <!-- Start Clarity -->
    <script type="text/javascript">
      // Initialize Clarity with consent management

      // Function to check if user is in EEA, UK, or Switzerland using IP geolocation
      async function isEuropeanUser() {
        try {
          const response = await fetch('https://ipapi.co/json/');
          const data = await response.json();

          // List of EEA countries, UK, and Switzerland
          const europeanCountries = [
            'AT',
            'BE',
            'BG',
            'HR',
            'CY',
            'CZ',
            'DK',
            'EE',
            'FI',
            'FR',
            'DE',
            'GR',
            'HU',
            'IS',
            'IE',
            'IT',
            'LV',
            'LI',
            'LT',
            'LU',
            'MT',
            'NL',
            'NO',
            'PL',
            'PT',
            'RO',
            'SK',
            'SI',
            'ES',
            'SE',
            'GB',
            'CH', // UK and Switzerland
          ];

          return europeanCountries.includes(data.country_code);
        } catch (error) {
          console.error('Error detecting location:', error);
          return false; // Default to non-European in case of error
        }
      }

      function getConsentStatus() {
        return window.cookieConsent?.getAnalyticsConsent() || false;
      }

      async function initializeClarity() {
        const isEuropean = await isEuropeanUser();
        if (isEuropean) {
          const hasConsent = getConsentStatus();
          if (hasConsent) {
            clarity('consent');
          } else {
            clarity('stop');
            document.getElementById('cookie-consent-banner').style.display = 'block';
          }
        } else {
          clarity('consent');
        }
      }

      document.addEventListener('consentStatusChanged', function (event) {
        if (event.detail.analytics === true) {
          clarity('consent');
        } else {
          clarity('stop');
        }
      });

      document.addEventListener('DOMContentLoaded', initializeClarity);
    </script>

    <script>
      function acceptCookies() {
        document.dispatchEvent(
          new CustomEvent('consentStatusChanged', {
            detail: { analytics: true },
          })
        );
        document.getElementById('cookie-consent-banner').style.display = 'none';
      }

      function declineCookies() {
        document.dispatchEvent(
          new CustomEvent('consentStatusChanged', {
            detail: { analytics: false },
          })
        );
        document.getElementById('cookie-consent-banner').style.display = 'none';
      }

      // Initial check for European users
      (async function () {
        const isEuropean = await isEuropeanUser();
        if (isEuropean && !getConsentStatus()) {
          document.getElementById('cookie-consent-banner').style.display = 'block';
        }
      })();
    </script>

    <style>
      #cookie-consent-banner {
        position: fixed;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        background: #ffffff;
        padding: 2rem;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
        z-index: 1000;
        font-family: 'Avenir Next', sans-serif;
        border-radius: 12px;
        max-width: 500px;
        width: 90%;
      }

      .cookie-consent-content {
        text-align: center;
      }

      .consent-header h2 {
        color: #2d4550;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1rem;
        font-family: 'Editorial New', serif;
      }

      .consent-body p {
        color: #666666;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
      }

      .consent-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .consent-buttons button {
        width: 100%;
        padding: 0.875rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Avenir Next', sans-serif;
      }

      .accept-button {
        background: #e6a886;
        color: #ffffff;
      }

      .accept-button:hover {
        background: #d89775;
      }

      .decline-button {
        background: #ffffff;
        color: #2d4550;
        border: 1px solid #e0e0e0 !important;
      }

      .decline-button:hover {
        background: #f5f5f5;
      }

      @media (max-width: 768px) {
        #cookie-consent-banner {
          bottom: 0;
          left: 0;
          right: 0;
          width: 100%;
          max-width: none;
          border-radius: 12px 12px 0 0;
          transform: none;
        }

        .consent-header h2 {
          font-size: 1.75rem;
        }
      }
    </style>

