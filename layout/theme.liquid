      }

      .decline-button {
        background: #ffffff;
        color: #2d4550;
        border: 1px solid #e0e0e0 !important;
      }

      .decline-button:hover {
        background: #f5f5f5;
      }

      @media (max-width: 768px) {
        #cookie-consent-banner {
          bottom: 0;
          left: 0;
          right: 0;
          width: 100%;
          max-width: none;
          border-radius: 12px 12px 0 0;
          transform: none;
        }

        .consent-header h2 {
          font-size: 1.75rem;
        }
      }
