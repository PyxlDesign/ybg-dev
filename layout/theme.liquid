    <!-- Start Clarity -->

    <script type="text/javascript">
      // Initialize Clarity with consent management
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = 'https://www.clarity.ms/tag/' + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, 'clarity', 'script', 'pbw7zr0hni');

      // Function to check if user is in EEA, UK, or Switzerland
      function isEuropeanUser() {
        const europeanTimezones = ['Europe/', 'GMT'];
        const userTimezone = Intl.DateTimeFormat().resolvedOptions().timeZone;
        return europeanTimezones.some((tz) => userTimezone.includes(tz));
      }

      function getConsentStatus() {
        return window.cookieConsent?.getAnalyticsConsent() || false;
      }

      function initializeClarity() {
        if (isEuropeanUser()) {
          const hasConsent = getConsentStatus();
          if (hasConsent) {
            clarity('consent');
          } else {
            clarity('stop');
          }
        } else {
          clarity('consent');
        }
      }

      document.addEventListener('consentStatusChanged', function (event) {
        if (event.detail.analytics === true) {
          clarity('consent');
        } else {
          clarity('stop');
        }
      });

      document.addEventListener('DOMContentLoaded', initializeClarity);
    </script>

    <script>
      function acceptCookies() {
        document.dispatchEvent(
          new CustomEvent('consentStatusChanged', {
            detail: { analytics: true },
          })
        );
        document.getElementById('cookie-consent-banner').style.display = 'none';
      }

      function declineCookies() {
        document.dispatchEvent(
          new CustomEvent('consentStatusChanged', {
            detail: { analytics: false },
          })
        );
        document.getElementById('cookie-consent-banner').style.display = 'none';
      }

      if (isEuropeanUser() && !getConsentStatus()) {
        document.getElementById('cookie-consent-banner').style.display = 'block';
      }
    </script>

    <style>
      #cookie-consent-banner {
        position: fixed;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        background: #ffffff;
        padding: 2rem;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
        z-index: 1000;
        font-family: 'Avenir Next', sans-serif;
        border-radius: 12px;
        max-width: 500px;
        width: 90%;
      }

      .cookie-consent-content {
        text-align: center;
      }

      .consent-header h2 {
        color: #2d4550;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1rem;
        font-family: 'Editorial New', serif;
      }

      .consent-body p {
        color: #666666;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
      }

      .consent-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .consent-buttons button {
        width: 100%;
        padding: 0.875rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Avenir Next', sans-serif;
      }

      .accept-button {
        background: #e6a886;
        color: #ffffff;
      }

      .accept-button:hover {
        background: #d89775;
      }

      .decline-button {
        background: #ffffff;
        color: #2d4550;
        border: 1px solid #e0e0e0 !important;
      }

      .decline-button:hover {
        background: #f5f5f5;
      }

      @media (max-width: 768px) {
        #cookie-consent-banner {
          bottom: 0;
          left: 0;
          right: 0;
          width: 100%;
          max-width: none;
          border-radius: 12px 12px 0 0;
          transform: none;
        }

        .consent-header h2 {
          font-size: 1.75rem;
        }
      }
    </style>

    <!-- End Clarity -->
