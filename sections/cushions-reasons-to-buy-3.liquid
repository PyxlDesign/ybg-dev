{% liquid
  assign s = section.settings
  assign image = s.featured_image
  assign heading = s.heading
  assign blocks = section.blocks
%}
<section class="repeatedly-reviews">
  <div class="container-xl">
    <div class="row no-gutters">
      <div class="col-lg-6">
        {% if image != blank %}
          <div class="image-wrapper pr-large-7">
            <div class="image-ratio image-ratio--square">
              {{ image | img_url: 'master' | img_tag }}
            </div>
          </div>
        {% endif %}
      </div>
      <div class="col-lg-6">
        <div class="content-box text-center h-100 flex-center">
          <div class="inner">
            {% if heading != blank %}
              <h2>{{ heading }}</h2>
            {% endif %}
            <div class="review-blocks">
              {% for block in blocks %}
                {% liquid
                  assign bs = block.settings
                  assign title = bs.title
                  assign content = bs.content
                %}
                <div class="review-block">
                  {% if title != blank %}
                    <h3 class="text-bronze-2 font-karla">{{ title }}</h3>
                  {% endif %}
                  {% if content != blank %}
                    <p>{{ content }}</p>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Reasons to buy",
  "class": "reasons-to-buy-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Heading goes here"
    },
    {
      "type": "header",
      "content": "Reasons"
    },
    {
      "type": "text",
      "id": "reason_1_title",
      "label": "Reason 1 Title",
      "default": "HAPPIER BABY"
    },
    {
      "type": "richtext",
      "id": "reason_1_text",
      "label": "Reason 1 Text",
      "default": "Dangling feet can lead to frussing, shorter mealtimes, a lack of interest in eating."
    },
    {
      "type": "text",
      "id": "reason_2_title",
      "label": "Reason 2 Title",
      "default": "HAPPIER BABY"
    },
    {
      "type": "richtext",
      "id": "reason_2_text",
      "label": "Reason 2 Text",
      "default": "Dangling feet can lead to frussing, shorter mealtimes, a lack of interest in eating."
    },
    {
      "type": "text",
      "id": "reason_3_title",
      "label": "Reason 3 Title",
      "default": "HAPPIER BABY"
    },
    {
      "type": "richtext",
      "id": "reason_3_text",
      "label": "Reason 3 Text",
      "default": "Dangling feet can lead to frussing, shorter mealtimes, a lack of interest in eating."
    }
  ],
  "blocks": [
    {
      "name": "Review",
      "type": "review",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "90/90/90 rule"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Content",
          "default": "Review content goes here"
        }
      ]
    }
  ],
  "max_blocks": 3
}
{% endschema %}
