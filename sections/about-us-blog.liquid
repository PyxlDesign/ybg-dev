<section class="from-blogs">
    <div class="container">
        {% if section.settings.section_heading != blank %}
        <h2 class="section-title section-title--has-border text-center">{{ section.settings.section_heading }}</h2>
        {% endif %}
        <div class="row">
            {% for block in section.blocks %}
                {% liquid 
                    assign bs = block.settings
                    assign article = bs.article
                    %}
                    {% if article != blank %}
                    <div class="col-md-4">
                        <a href="{{ article.url }}" class="from-blogs__block">
                            <div class="block-thumbnail">
                                <div class="image-ratio image-ratio--16-9">
                                    {{ article.image | img_url:'master' | img_tag }}
                                </div>
                            </div>
                            <div class="block-meta py-13">
                                <h3 class="font-demi font-karla">{{ article.title }}</h3>
                            </div>
                        </a>
                    </div>
                    {% endif %}
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
    "name": "Blogs",
    "class": "about-us-blogs-section",
    "settings": [
        {
            "type": "text",
            "id": "section_heading",
            "label": "Section Heading",
            "default": "Section heading goes here"
        }
    ],
    "max_blocks": 3,
    "blocks": [
        {
            "name": "Blog article",
            "type": "article",
            "settings": [
                {
                    "type": "article",
                    "id": "article",
                    "label": "Blog Article"
                }
            ]
        }
    ]
}
{% endschema %}