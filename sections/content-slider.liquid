<section class="product-showcase">
    <div class="product-panel text-center" data-flickity='{ "wrapAround": true, "pageDots": false, "autoPlay": true, "autoPlay": 5000, "prevNextButtons": false }'>
        {% assign block_size = section.blocks | size %}
        {% if block_size > 0 %}
        {% for block in section.blocks %}
        {%liquid
            assign s = block.settings
            assign section_header = s.heading
            assign paragraph = s.subtext
            %}
        <div class="carousel-cell">
            <div class="product-panel__title">
                {% if section_header != blank %}
                <h2 class="h1">{{ section_header }}</h2>
                {% endif %}
                {% if paragraph %}
                <div class="copy-lg">{{ paragraph }}</div>
                {% endif %}
            </div>
        </div>
        {% endfor %} 
        {% endif %}
        
    </div>
</section>
{% schema %}
{
    "name": "Content slider",
    "class": "content-slider-section",
    "settings": [
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "Your heading goes here"
                },
                {
                    "type": "richtext",
                    "id": "subtext",
                    "label": "Sub text",
                    "default": "<p>Your text goes here</p>"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Content",
            "name":"Content slider"
        }
    ]
}
{% endschema %}