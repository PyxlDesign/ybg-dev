{% liquid 
    assign s = section.settings
    assign section_heading = s.section_heading
    assign heading = s.heading
    assign content = s.content
    %}
<section class="hero-safe-eating text-center">
    <div class="container-xl">
        <div class="row no-gutters">
            <div class="col-lg-7 bg-gray-2 col-left">
                {% if section_heading != blank %}
                <h1 class="text-center text-bronze-2">{{ section_heading }}</h1>
                {% endif %}
            </div>
            <div class="col-lg-5 bg-bronze-2 col-right">
                <div class="inner">
                    {% if heading != blank %}
                    <h3 class="text-gray-2 font-karla text-uppercase">{{ heading }}</h3>
                    <div class="divider-small"></div>
                    {% endif %}
                    {% if content != blank %}
                    <h3 class="text-light-beige font-karla text-uppercase">{{ content }}</h3>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
{% schema %}
{
    "name": "Safe eating hero",
    "class": "hero-safe-eating-section",
    "settings": [
        {
            "type": "textarea",
            "id": "section_heading",
            "label": "Section heading",
            "default": "Your heading <br> goes here"
        },
        {
            "type": "header",
            "content": "Content settings"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Content heading",
            "default": "Content heading goes here"
        },
        {
            "type": "textarea",
            "id": "content",
            "label": "Paragraph",
            "default": "Content paragraph goes here"
        }
    ]
}
{% endschema %}